<div>
  <div class="box">
    <%= form_tag admin_home_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :email,
        params[:email],
        class: "form-control mr-2",
        placeholder: "email address",
        autofocus: true %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>

    <% if params[:email].blank? %>
      <h3>Please enter an email address</h3>
  </div>
    <% elsif @iterations %>
      <h3>Iterations for <em><%= params[:email].to_s %></em></h3>
  </div>

      <div class="iterations-container box cluster">
        <div> <!-- cluster wrapper -->
          <% @iterations.each_with_index do |iteration, i| %>
            <%= render 'shared/iteration-card', locals: { iteration: iteration, index: i } %>
          <% end %>
        </div>
      </div>
    <% else %>
      <h3>No iterations found for <em><%= params[:email].to_s %></em></h3>
  </div>
    <% end %>
</div>

