<div class="w-90 my-3 mx-auto">
  <%= form_tag admin_board_path, method: :get do %>
    <%= text_field_tag :email,
      params[:email],
      class: "form-control",
      placeholder: "email address",
      autofocus: true %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>

  <% if @iterations %>
    <p><%= "found user #{params[:email]}, user_id: #{@iterations.first.user_id}" %></p>
    <p>iterations:</p>
    <div class="iterations-container d-flex flex-wrap justify-content-left w-100">
      <% @iterations.each_with_index do |iteration, i| %>
        <%= render 'shared/iteration-card', locals: { iteration: iteration, index: i } %>
      <% end %>
    </div>
  <% end %>
</div>

